{% extends 'SbtsIssueBundle::layout.html.twig' %}

{% block title %}{{ 'issue.form.create' | trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% if issue is defined and not null %}
                <ol class="breadcrumb">
                    {% if is_granted('view', issue.project) %}
                        <li>
                            <a href="{{ path('sbts_project_page', {'project': issue.project.code}) }}">
                                {{ issue.project.label }}
                            </a>
                        </li>
                    {% endif %}

                    {% if issue.code is not empty and is_granted('view', issue) %}
                        <li>
                            <a href="{{ path('sbts_issue_page', {'issue': issue.code}) }}">
                                {{ issue.code }}
                            </a>
                        </li>

                        <li class="current">{{ 'issue.form.update' | trans }}</li>
                    {% else %}
                        <li class="current">{{ 'issue.form.create' | trans }}</li>
                    {% endif %}
                </ol>
            {% endif %}

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
