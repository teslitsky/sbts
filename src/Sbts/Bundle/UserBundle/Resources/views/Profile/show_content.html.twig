<div class="fos_user_user_show">
    <div class="row">
        <div class="col-md-4">
            {% include '@SbtsUser/Default/_user_avatar.html.twig' %}
        </div>
        <div class="col-md-8">
            <p>{{ 'user.username' | trans }}: {{ user.username }}</p>

            <p>{{ 'user.fullname' | trans }}: {{ user.fullname }}</p>

            <p>{{ 'user.email' | trans }}: <a href="mailto:{{ user.email }}">{{ user.email }}</a></p>

            <p>
                {% include '@SbtsUser/Default/_user_roles.html.twig' %}
            </p>

            <p>
                {% if is_granted('edit', user) %}
                    <a class="btn btn-primary" href="{{ path('sbts_user_edit', {'username': user.username}) }}">
                        {{ 'user.link.edit_user' | trans }}
                    </a>
                {% elseif user.id == app.user.id %}
                    <a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">
                        {{ 'user.link.edit_my_user' | trans }}
                    </a>
                {% endif %}

                {% if is_granted('delete', user) %}
                    <a class="btn btn-danger"
                       data-confirm="{{ 'user.link.delete_confirmation' | trans({'%name%': user.fullname}) }}"
                       href="{{ path('sbts_user_delete', {'username': user.username}) }}">
                        {{ 'user.link.delete' | trans }}
                    </a>
                {% endif %}
            </p>
        </div>
    </div>
</div>
