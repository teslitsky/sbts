{% extends 'SbtsUserBundle::layout.html.twig' %}

{% block title %}{{ 'app.users_list' | trans }}{% endblock %}

{% block body %}
    <div class="row">
        <h4>{{ 'app.users_list' | trans }}</h4>
        <div class="row">
            <div class="col-md-3">
                <strong>User</strong>
            </div>
            <div class="col-md-9">
                <strong>Actions</strong>
            </div>
        </div>
        {% for user in users %}
            <div class="row">
                <div class="col-md-3">
                    {% if user.avatar is not null %}
                        <img src="{{ vich_uploader_asset(user, 'avatarFile') | imagine_filter('users_list_avatar') }}" alt="{{ user.username }}" />
                    {% endif %}

                    {{ user.username }}
                </div>
                <div class="col-md-9">
                    <a class="btn btn-primary btn-xs" href="{{ path('sbts_user_profile', { username: user.username }) }}">show</a>&nbsp;
                    <a class="btn btn-primary btn-xs" href="{{ path('sbts_user_edit', { username: user.username }) }}">edit</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
